<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="tanjore.disastermanagement.tn.tanjore">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".Activities.HomeActivity"
                    android:label="Tanjore"
                    android:theme="@style/NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activities.RegistrationActivity"
            android:label="@string/title_activity_registration"
            android:theme="@style/NoActionBar" />
        <activity
            android:name=".ReportIncident"
            android:label="@string/title_activity_report_incident"
            android:theme="@style/NoActionBar" />
        <activity
            android:name=".Activities.IncidentHistoryList"
            android:label="IncidentHistoryList"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".Activities.SafetyTips"
            android:label="@string/title_activity_safety_tips"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Activities.EditAccount"
            android:label="@string/title_activity_edit_account"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Activities.LogIn"
            android:label="@string/title_activity_log_in"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>